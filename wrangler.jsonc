{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "hono-pglite",
  "main": "src/index.ts",
  "compatibility_date": "2025-07-11",
  "compatibility_flags": ["global_fetch_strictly_public"],
  "observability": {
    "enabled": true
  },
  "hyperdrive": [
    {
      "binding": "HYPERDRIVE",
      "id": "<YOUR_DATABASE_ID>"
    }
  ]
}
